extends ../../../s-project 

block head 
    title #{project.fields.title} at QUIRKY.technology

block content 
    article 
        header.contenthdr.contenthdr--projects
            h2 #{project.fields.title}
            if project.fields.license 
                p License: #{project.fields.license}
            if project.fields.repository 
                p Code: 
                    a(href=project.fields.repository) #{project.fields.repository}
            
        section.content.content--projects.content--bodytext
            | !{md.render(project.fields.description)}
            
        if docs.length > 0
            section.content.content--projects.content--bodytext 
                h3 Documents 
                ul
                each doc in docs
                    li #{doc.fields.title}
            